    <a class="navbar-brand" href="<%= root_path %>">Navegacion</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Home', home_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Projects', projects_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'Contact', contact_path %>
        </li>
      </ul>
    </div>
  </nav>

